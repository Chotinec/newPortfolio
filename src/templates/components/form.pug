.form
  .form__row
    label.form__block
      .form__block-title Введите ваше имя
      input(type="text" placeholder="Ковальчук Дмитрий" class="form-field" required)
      +icon('user', 'form-icon form-icon--user')
    label.form__block
      .form__block-title Введите ваш email
      input(type="email" placeholder="loftschool@study.com" class="form-field" required)
      +icon('envelope', 'form-icon form-icon--envelope')
  .form__row
    label.form__block
      .form__block-title Сообщение к письму
      textarea(name="text" placeholder="Требуется ваша помощь в создании сайта. Интересуют сроки и цена вопроса" class="form-field form-text-area form-field--message" wrap="hard")
      +icon('message', 'form-icon form-icon--message')
  .form__row
    button(type="submit" class="btn form--btn") Отправить