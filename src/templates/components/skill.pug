mixin skill(skillItem, parcent) 
  .skill
    svg(class="skill__svg" viewBox="0 0 100 100" preserveAspectRatio="none")
      defs
        linearGradient#circle-gradient(x1="0%" y1="0%" x2="0%" y2="100%")
          stop(offset="0%" stop-color="#d0731b")
          stop(offset="100%" stop-color="#dc9322")
      circle(cx="50" cy="50" r="40" class="skill__circle skill__circle--under")
      circle(cx="50" cy="50" r="40" stroke="url(#circle-gradient)" class="skill__circle skill__circle--above" 
            style=`animation-delay: -${parcent}s`)
    .skill__name= skillItem
