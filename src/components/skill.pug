mixin skill(skillItem, parcent) 
  .skill
    svg(class="skill__svg" viewBox="0 0 100 100" preserveAspectRatio="none")
      circle(cx="50" cy="50" r="40" class="skill__circle skill__circle--under")
      circle(cx="50" cy="50" r="40" class="skill__circle skill__circle--above" 
            style=`animation-delay: -${parcent}s`)
    .skill__name= skillItem

