mixin socials(mod)
  .socials
    ul.socials__list
      each social in ['insta', 'vk', 'github']
        li(class="socials__item socials__item--" + mod)
          a(class=`socials__link socials__link--${mod}` href="#")
            +icon(social, `socials__icon socials__icon--${mod} socials__icon--${social}`)
