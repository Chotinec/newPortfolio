.contact {

  @include tablets {
    margin-bottom: 120px;
  }
}

.contact__title {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 85px;
  z-index: 10;

  @include tablets {
    text-align: center;
    margin-bottom: 60px;
    font-size: 30px;
  }

  /* @include phones {
    font-size: 24px;
  } */
}

.contact__form {
  display: flex;
  width: 62%;

  @include desktop {
    width: 70%;
  }

  @include tablets {
    width: 100%;
  }
}