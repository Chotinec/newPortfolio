.form {
  width: 100%;
}

.form__row {
  width: 100%;
  display: flex;
  margin-bottom: 40px;

  &:last-child {
    margin-bottom: 0;
  }

  @include tablets {
    position: relative;
  }

  @include phones {
    flex-direction: column;
  }
}

.form__block {
  cursor: pointer;
  margin-right: 50px;
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;

  &:last-child {
    margin-right: 0;
  }

  @include phones {
    margin-right: 0;
  }
}

.form__block-title {
  opacity: 0.3;
  font-size: 16px;
  font-weight: 400;
  margin-bottom: 23px;
  margin-left: 50px;

  @include tablets {
    font-size: 14px;
  }
}

.form-field {
  background-color: transparent;
  border: 0;
  border-bottom: 1px solid $text-color;
  color: $text-color;
  outline: none;
  font-size: 18px;
  font-weight: 700;
  padding: 0 0 20px 50px;

  &::placeholder {
    max-width: 410px;
    line-height: 36px;
    color: $text-color;

    @include tablets {
      font-size: 14px;
    }
  }

  &:focus {
    border-color: #ff9a00;

    &::placeholder {
      color: #2d3c4e;
    }
  }

  &:hover {
    transition: .3s;
    border-color: #ff9a00;

    &::placeholder {
      color: #2d3c4e;
    }    
  }
} 

.form-field:focus ~ .form-icon {
  fill: #ff9a00;
}

.form-field:hover ~ .form-icon {
  transition: .3s;
  fill: #ff9a00;
}

.form-text-area {
  min-height: 80px;
}

.form--btn {
  margin-top: 20px;

  @include tablets {
    position: absolute;
    @include centered('x');
  }
}

.form-icon {
  fill: $text-color;
  opacity: 0.3;
  position: absolute;
  left: 0;
  top: 40px;

  &--user {
    width: 26px;
    height: 30px;
  }

  &--envelope {
    width: 30px;
    height: 23px;
  }

  &--message {
    width: 30px;
    height: 30px;
  }
}