.popup {
  position: relative;
  z-index : 9999;
  width: 320px;
  position: fixed;
  top: 0;
  right: 0;
  overflow: hidden;
  height: 100vh;
  background-color:#fff;
  padding-left: 60px;
  display: none;
}

.active {
  display: block;
}

.popup__content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
