.navigation__list {
  display: flex;
}

.navigation__item {
  margin-right: 62px;
  font-size: 16px;
  font-weight: 400;
  line-height: 30px;

  &:last-child {
    margin-right: 0;
  }
}

.navigation__link {
  &:hover {
    transition: .3s;
    text-decoration: underline;
    color: $hover-color;
  }
}